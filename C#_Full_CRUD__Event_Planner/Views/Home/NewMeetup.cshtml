<h3>Create a Meet Up</h3>
@model Event
<div class="w-75 my-0 mx-auto d-flex justify-content-between">
    <form asp-action="AddMeetup" asp-controller="Home" method="post">
        <div class="row">
            <div class="col">
                <div class="form-group">
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <label asp-for="Title"></label>
                    <input asp-for="Title" class="form-control">
                </div>
                <div class="form-group">
                    <span asp-validation-for="EventDT" class="text-danger"></span>
                    <label asp-for="EventDT"></label>
                    <input asp-for="EventDT" class="form-control">
                </div>
                <div class="form-group">
                    <span asp-validation-for="Duration" class="text-danger"></span>
                    <span asp-validation-for="DurationType" class="text-danger"></span>
                    <label asp-for="Duration"></label>
                    <input asp-for="Duration" class="form-control">
                    <select asp-for="DurationType" class="form-control">
                        <option value="Minutes" selected>
                            Minutes
                        </option>
                        <option value="Hours">
                            Hours
                        </option>
                        <option value="Days" >
                            Days
                        </option>
                    </select>
                </div>
            </div>
            <div class="col">
                <div class="form-group">
                    <input asp-for="UserId" value="@ViewBag.UserId" hidden>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" cols="30" rows="10" style="resize: none;" class="form-control"></textarea>
                </div>
                <input type="submit" value="Create A Meetup">
            </div>
        </div>
    </form>
</div>